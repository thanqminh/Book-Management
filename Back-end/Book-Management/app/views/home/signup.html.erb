<% content_for :title, "Home" %>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>

    <!-- header -->
    <%= render "layouts/header" %>

    <div class="col-md-4"></div>
    <div class="col-md-4">
      <h2 class="text-center"> Sign up</h2>
      <div class="container-fluid">

          <form class="form-group">
            <p>Name</p>
            <input type="text" placeholder="Name" class="form-control input-group">
          </form>
          <form class="form-group">
            <p>Email</p>
            <input type="text" placeholder="Email" class="form-control">
          </form>
          <form class="form-group">
            <p>Password</p>
            <input type="text" placeholder="Password" class="form-control">
          </form>
          <form class="form-group">
            <p>Re-type password</p>
            <input type="text" placeholder="Re-type password" class="form-control">
          </form>
        <p><a class="btn btn-primary btn-lg" href="signupdone.html" role="button">Create my Account &raquo;</a></p>
      </div>
    </div>
    <div class="col-md-4"></div>

    <!-- footer -->
    <%= render "layouts/footer" %>

  </body>
</html>
